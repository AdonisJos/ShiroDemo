<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
            "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.peng.dao.mapper.UserMapper">
	<select id="queryUserByName" resultType="User" parameterType="java.lang.String">
		SELECT id,userName,password FROM t_user WHERE userName=#{userName}
	</select>
	
	<select id="queryRolesByName" resultType="java.lang.String"
		parameterType="java.lang.String">
		SELECT * FROM t_user
<!-- 		SELECT name FROM role r,user_role ur,user u WHERE r.id =
		ur.roleId AND u.id
		= ur.userId AND u.userName=#{userName} -->
	</select>

	<select id="queryAll" resultType="User">
		SELECT * FROM t_user
	</select>

	<select id="queryUserByNPR" resultType="User" parameterType="com.peng.POJO.UserPOJO">
		SELECT * FROM t_user where userName=#{userName} and password=#{password} and roleName=#{roleName}
	</select>

</mapper>